{
  "name": "tealium-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Tealium data layer validation, documentation, debugging, and code generation",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:file": "eslint",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check": "bun run typecheck && bun run lint",
    "lint:claude": "bun run typecheck && bun run lint && bun run format:check",
    "test": "bun test",
    "test:file": "bun test"
  },
  "keywords": [
    "tealium",
    "mcp",
    "data-layer",
    "analytics",
    "tag-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.18.0"
  }
}
